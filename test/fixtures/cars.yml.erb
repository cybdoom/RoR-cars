<%
  MODELS = {
    'ford' => ['Cougar', 'Figo', 'Futura'],
    'toyota' => ['Auris', 'Corolla', 'iQ'],
    'bmw' => ['X3', 'E60', 'F30']
  }
  CARCASES = ['седан', 'пасажирський', 'фургон', 'хетчбек', 'вантажний фургон']
  COLORS = ['білий', 'чорний', 'срібний', 'синій', 'червоний', 'сірий']
  TRANSMISSIONS = ['М/Т']
%>

<% 25.times do |i| %>
<%= i %>:
  <% brand = MODELS.keys.sample %>
  brand: <%= brand %>
  model: <%= MODELS[brand].sample %>
  color: <%= COLORS.sample %>
  carcase: <%= CARCASES.sample %>
  year: <%= 1960 + rand(54) %>
  engine_volume: <%= 1000 + rand(2500) %>
  description: 'Test car generated by rake task'
  keywords: 'car test fixture rails'
  diesel: <%= [true, false].sample %>
  transmission: <%= TRANSMISSIONS.sample %>
  mileage: <%= 20000 + rand(180000) %>
<% end %>
